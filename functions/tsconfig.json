{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "strictNullChecks": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "lib": ["esnext.asynciterable", "es2015", "dom"],
  "compileOnSave": true,
  "include": ["src/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
